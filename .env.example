# Store Orders Portal - Environment Configuration Template
# Copy this file to .env and update the values for your environment
# DO NOT commit .env to version control - ensure .env is in .gitignore

# =============================================================================
# Application Configuration
# =============================================================================
APP_PORT=1422
RUST_LOG=info,store_orders=debug
NODE_ENV=development

# =============================================================================
# JWT Authentication Secrets
# =============================================================================
# CRITICAL: Generate strong random secrets for production!
# Use: openssl rand -base64 32
JWT_ACCESS_SECRET=your_strong_random_access_secret_here
JWT_REFRESH_SECRET=your_strong_random_refresh_secret_here

# =============================================================================
# Email / SMTP Configuration
# =============================================================================
SMTP_HOST=smtp.office365.com
SMTP_USERNAME=your_email@domain.com
SMTP_PASSWORD=your_email_password
SMTP_FROM="Store Orders Portal <no-reply@domain.com>"

# =============================================================================
# Application URLs
# =============================================================================
# Base URL for the application (used in emails and external links)
PUBLIC_BASE_URL=https://your-domain.com
# Development URL (used when in debug mode)
DEV_BASE_URL=http://127.0.0.1:1422
